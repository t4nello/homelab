services:
  fluentd:
    image: fluentd-plugins:latest
    container_name: fluentd
    user: root
    environment:
      - ELASTICSEARCH_PASSWORD=${ELASTICSEARCH_PASSWORD}
    volumes:
      - /var/lib/docker/containers:/var/lib/docker/containers:ro
      - /var/run/docker.sock:/var/run/docker.sock:ro
      -  {{DEPLOY_PATH}}/efk-stack/config/fluentd/fluent.conf:/fluentd/etc/fluent.conf
    depends_on:
      - elasticsearch
    restart: unless-stopped
    networks:
      - logging

  elasticsearch:
    image: elasticsearch:9.0.2
    container_name: elasticsearch
    volumes:
      -  {{DEPLOY_PATH}}/efk-stack/config/es/elasticsearch.yml:/usr/share/elasticsearch/config/elasticsearch.yml
      - elasticsearch_data:/usr/share/elasticsearch/data
    healthcheck:
      test: ["CMD", "curl", "-f", "http://localhost:9200"]
      interval: 10s
      timeout: 5s
      retries: 5
    restart: unless-stopped
    mem_limit: 1024m
    networks:
      - logging

  kibana:
    image: kibana:9.0.2
    container_name: kibana
    environment:
      - ELASTICSEARCH_HOSTS=http://elasticsearch:9200
      - ELASTICSEARCH_PASSWORD=${KIBANA_PASSWORD}
    volumes:
      -  {{DEPLOY_PATH}}/efk-stack/config/kibana/kibana.yml:/usr/share/kibana/config/kibana.yml
    depends_on:
      - elasticsearch
    labels:
      - "traefik.enable=true"
      - "traefik.http.routers.kibana.rule=Host(`kibana.{{HOST}}`)"
      - "traefik.http.routers.kibana.entryPoints={{TRAEFIK_ENTRYPOINT | default ('websecure')}}"
      - "traefik.http.routers.kibana.tls={{TRAEFIK_TLS | default ('true')}}"
      - "traefik.http.routers.kibana.priority=15"
      - "traefik.http.services.kibana.loadbalancer.server.port=5601"
      - "traefik.docker.network=management"
    healthcheck:
      test: ["CMD", "curl", "-f", "http://localhost:5601"]
      interval: 10s
      timeout: 5s
      retries: 5
    restart: unless-stopped
    networks:
      - logging
      - management

volumes:
  elasticsearch_data:
    name: elasticsearch_data

networks:
  logging:
    external: true
  management:
    external: true