version: '3.8'

services:
  filebrowser:
    image: filebrowser/filebrowser:latest
    container_name: filebrowser
    restart: unless-stopped
    user: "${PUID:-1000}:${PGID:-1000}"
    volumes:
      - ${BROWSING_PATH}:/srv
      - {{DEPLOY_PATH}}/filebrowser-stack/config/database.db:/database.db
      - {{DEPLOY_PATH}}/filebrowser-stack/config/config.json:/config.json
    labels:
      - "traefik.enable=true"
      - "traefik.http.routers.filebrowser.rule=Host(`fb.{{HOST}}`)"
      - "traefik.http.routers.filebrowser.entryPoints={{TRAEFIK_ENTRYPOINT | default ('websecure')}}"
      - "traefik.http.routers.filebrowser.tls={{TRAEFIK_TLS | default ('true')}}"
      - "traefik.http.routers.filebrowser.priority=15"
      - "traefik.http.services.filebrowser.loadbalancer.server.port=80"
      - "traefik.docker.network=management"
    networks:
      - management
networks:
  management:
    external: true 